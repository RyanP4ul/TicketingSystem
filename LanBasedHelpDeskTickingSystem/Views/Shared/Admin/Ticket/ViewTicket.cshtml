@model LanBasedHelpDeskTickingSystem.Entities.Models.Ticket
@{
    ViewData["Title"] = "View Ticket Tickets";
    var isNotAvailable = Model.Status == "resolved" || Model.Status == "close";
}

@await Html.PartialAsync("_Navbar")

<div class="container mx-auto max-w-screen-xl p-6">

    <a asp-action="Index" asp-controller="Ticket" class="flex items-center text-sm font-medium text-blue-600 hover:underline mb-4">
        <svg class="w-4 h-4 mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5H1m0 0l4-4M1 5l4 4"/>
        </svg>
        Back to all tickets
    </a>

    <h1 class="text-3xl font-bold text-gray-900">@Model.Title</h1>
    <p class="text-lg text-gray-500 mb-6">Ticket #@Model.TicketNumber</p>
    
    @if (Model.Status == "resolved" || Model.Status == "close")
    {
        <div class="flex items-center p-4 mb-4 text-sm text-yellow-800 rounded-lg bg-yellow-50 dark:bg-gray-800 dark:text-yellow-300" role="alert">
            <svg class="shrink-0 inline w-4 h-4 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
            </svg>
            <span class="sr-only">Info</span>
            <div>
                <span class="font-medium">Warning!</span> This ticket is marked as @Model.Status. No further actions can be taken.
            </div>
        </div>
    }
    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

        <div class="lg:col-span-2 flex flex-col gap-6">

            <div class="bg-white p-6 rounded-lg shadow-md">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Ticket Details</h2>

                <div>
                    <label class="block mb-2 text-sm font-medium text-gray-900">Description</label>
                    <div class="p-4 bg-gray-50 text-gray-700 rounded-lg border border-gray-300">
                        @Model.Description
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                    <div>
                        <label for="category" class="block mb-2 text-sm font-medium text-gray-900">Category</label>
                        <input type="text" id="category" value="@Model.Category?.Name" class="bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" readonly>
                    </div>
                    <div>
                        <label for="priority" class="block mb-2 text-sm font-medium text-gray-900">Priority</label>
                        <input type="text" id="priority" value="@Model.Priority" class="bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" readonly>
                    </div>
                    <div>
                        <label for="created" class="block mb-2 text-sm font-medium text-gray-900">Created</label>
                        <input type="text" id="created" value="@Model.CreatedAt" class="bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" readonly>
                    </div>
                    <div>
                        <label for="last-updated" class="block mb-2 text-sm font-medium text-gray-900">Last Updated</label>
                        <input type="text" id="last-updated" value="@Model.UpdatedAt" class="bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" readonly>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-lg shadow-md">
                <img src="https://placehold.co/600x400" class="w-full h-full object-cover" alt="Placeholder Image" />
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Comments & Communication (0)</h2>

                <div class="text-center text-gray-500 py-4">
                    No comments yet
                </div>

                <hr class="my-4">

                <form>
                    <label for="comment" class="block mb-2 text-sm font-medium text-gray-900">Add Comment</label>
                    <textarea id="comment" rows="4" class="block p-2.5 w-full text-sm text-gray-900 bg-white rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500" placeholder="Type your message here"></textarea>
                    <button type="submit" class="inline-flex items-center px-5 py-2.5 mt-4 text-sm font-medium text-center text-white bg-blue-700 rounded-lg focus:ring-4 focus:ring-blue-200 hover:bg-blue-800">
                        <svg class="w-4 h-4 mr-2 -ml-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 008 16.171V11.182a1 1 0 00-2 0v4.989l-3.076 1.118L10 4.468l4.894 9.789L12 16.171V11.182a1 1 0 00-2 0v4.989l5 1.428a1 1 0 001.17-1.408l-7-14z"></path>
                        </svg>
                        Add Comment
                    </button>
                </form>
            </div>
        </div>

        <div class="lg:col-span-1 flex flex-col gap-6">

            <div class="bg-white p-6 rounded-lg shadow-md">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Student Information</h2>
                <div class="flex items-center gap-4">
                    <div class="flex-shrink-0">
                        <span class="inline-flex items-center justify-center h-12 w-12 rounded-full bg-gray-200">
                            <svg class="h-8 w-8 text-gray-600" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"></path>
                            </svg>
                        </span>
                    </div>
                    <div>
                        <p class="text-md font-semibold text-gray-900">@Model.Requester?.Username</p>
                        <p class="text-sm text-gray-500">@Model.Requester?.Email</p>
                    </div>
                </div>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Ticket Management</h2>
                <form class="flex flex-col gap-4">
                    <div>
                        <label for="manage-category" class="block mb-2 text-sm font-medium text-gray-900">Category</label>
                        <select id="manage-category" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                            <option selected>Select an option</option>
                            <option value="hardware">Hardware</option>
                            <option value="software">Software</option>
                            <option value="network">Network</option>
                            <option value="printer">Printer</option>
                        </select>
                    </div>
                    
                    <div>
                        <label for="manage-status" class="block mb-2 text-sm font-medium text-gray-900">Status</label>
                        <select id="manage-status" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                            <option value="open">Open</option>
                            <option value="in_progress">In Progress</option>
                            <option value="pending">Pending</option>
                            <option value="resolved">Resolved</option>
                            <option value="closed">Closed</option>
                        </select>
                    </div>
                    <div>
                        <label for="assigned-to" class="block mb-2 text-sm font-medium text-gray-900">Assigned To</label>
                        <input type="text" id="assigned-to" value="Admin User" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                    </div>
                    <div>
                        <label for="admin-notes" class="block mb-2 text-sm font-medium text-gray-900">Admin Notes</label>
                        <textarea id="admin-notes" rows="3" class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500" placeholder="Type your message here">@Model.Resolution</textarea>
                    </div>
                    <button type="submit" id="update-ticket-button" class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-bold rounded-lg text-sm px-5 py-2.5 text-center" @(isNotAvailable ? "disabled" : "")>
                        Update Ticket
                    </button>
                    <button type="submit" id="reject-ticket-button" class="w-full text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-bold rounded-lg text-sm px-5 py-2.5 text-center" @(isNotAvailable ? "disabled" : "")>
                        Reject Ticket
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let isLoaded = false;
    
        async function updateTicket()
        {
            if (!isLoaded) return;
            
            const updateTicketButton = document.getElementById("update-ticket-button");
            
            updateTicketButton.disabled = true;
            
            const response = await fetch("/api/admin/tickets/update", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({
                    ticketId: @Model.Id,
                    status: document.getElementById("manage-status").value,
                    assigned: document.getElementById("assigned-to").value,
                    notes: document.getElementById("admin-notes").value
                })
            });
            
            if (!response.ok) {
                console.log("Failed to update ticket");
                updateTicketButton.disabled = false;
                return;
            }
            
            setTimeout(() => {
                window.location.href = "/Admin/Tickets";
            }, 1000);
        }
        
        async function rejectTicket()
        {
        }
        
        document.addEventListener("DOMContentLoaded", async () => {
            isLoaded = true;
            
            document.getElementById("manage-status").value = "@Model.Status";
            
            document.getElementById("update-ticket-button").addEventListener("click", async (e) => {
                e.preventDefault();
                await updateTicket();
            });
        });
    </script>
}