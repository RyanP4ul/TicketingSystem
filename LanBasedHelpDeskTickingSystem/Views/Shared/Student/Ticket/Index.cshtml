@{
    ViewData["Title"] = "Student Dashboard";
}

@await Html.PartialAsync("_Navbar")

<section class="p-4 sm:p-8">
    <div class="max-w-screen-xl mx-auto">

        <div class="flex justify-between items-center mb-6">
            <div>
                <h1 class="text-2xl font-bold">Your tickets</h1>
                <p class="text-gray-500 text-sm"></p>
            </div>
            <a asp-controller="Ticket" asp-action="NewTicket"
                class="flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white font-medium px-4 py-2 rounded-lg shadow">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2"
                     viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round"
                          d="M12 4v16m8-8H4">
                    </path>
                </svg>
                New Ticket
            </a>
        </div>

        <div class="flex flex-col md:flex-row items-center justify-between space-y-3 md:space-y-0 md:space-x-4 mb-4">

            <div class="w-full md:w-1/2">
                <div class="relative w-full">
                    <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                        <svg aria-hidden="true" class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"/>
                        </svg>
                    </div>
                    <input type="text" id="search" class="bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pl-10 p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Search Tickets" required="">
                </div>
            </div>

            <div class="w-full md:w-auto flex flex-col md:flex-row space-y-2 md:space-y-0 items-stretch md:items-center justify-end md:space-x-3 flex-shrink-0">
                <select id="statusFilter" class="block w-full rounded-lg border border-gray-300 bg-white px-5 py-2.5 text-sm font-medium text-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-100 hover:bg-gray-100 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:hover:border-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-700 md:w-auto">
                    <option>All Status</option>
                    <option value="open">Open</option>
                    <option value="pending">Pending</option>
                    <option value="in_progress">In Progress</option>
                    <option value="resolved">Resolved</option>
                    <option value="closed">Closed</option>
                </select>
                
                <select id="categoryFilter" class="block w-full rounded-lg border border-gray-300 bg-white px-5 py-2.5 text-sm font-medium text-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-100 hover:bg-gray-100 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:hover:border-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-700 md:w-auto">
                    <option>All Categories</option>
                    <option value="projector">Projector</option>
                    <option value="network">Network issue</option>
                </select>
                
                <select id="priorityFilter" class="border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500">
                    <option>All Priorities</option>
                    <option value="low">Low</option>
                    <option value="medium">Medium</option>
                    <option value="high">High</option>
                </select>
            </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">

            <div class="hidden md:grid md:grid-cols-7 gap-4 text-sm font-medium text-gray-500 dark:text-gray-400 px-6 py-4">
                <div class="md:col-span-2">Ticket</div>
                <div>Status</div>
                <div>Priority</div>
                <div>Category</div>
                <div>Created</div>
                <div>Action</div>
            </div>

            <div id="listContainer" class="divide-y divide-gray-200 dark:divide-gray-700"></div>
            
            <nav aria-label="Ticket Pagination" class="mt-6 flex justify-center align-items-center w-full">
                <ul id="pagination" class="inline-flex -space-x-px text-base h-10"></ul>
            </nav>
        </div>

    </div>
</section>


@section Scripts
{
    <script src="~/js/libs/utils.js"></script>
    <script src="~/js/libs/pagination.js"></script>
    <script>
    
        let currentPage = 1;
        let limit = 10;
        let search = "";
        let status = "";
        let category = "";
        let priority = "";
        
        function ticketListItem(item)
        {
            return `
                    <div class="grid grid-cols-1 md:grid-cols-7 gap-4 items-center p-6 text-sm">
                        <div class="md:col-span-2 space-y-1">
                            <p class="font-semibold text-gray-900 dark:text-white">${item.title}</p>
                            <p class="text-gray-500 dark:text-gray-400"># ${item.ticketNumber}</p>
                            <p class="text-gray-500 dark:text-gray-400 truncate">${item.description.substring(0, 45)}...</p>
                        </div>
                        <div>
                                ${getStatusBadge(item.status)}
<!--                            <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded-full dark:bg-blue-900 dark:text-blue-300">${getStatusBadge(item.status)}</span>-->
                        </div>
                        <div>
                                ${getPriorityBadge(item.priority)}
                        </div>
                        <div class="text-gray-900 dark:text-white">${item.category.name}</div>
                        <div class="text-gray-900 dark:text-white">${new Date(item.createdAt).toLocaleDateString()}</div>
                        <div>
                            <a href="/User/Tickets/${item.id}" class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm px-5 py-2 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700">
                                View Details
                            </a>
                        </div>
                    </div>
            `;
        }
 
          function handleSearch(value)
          {
                search = value;
                loadLists(1);
          }
        
        function handeStatusChange(e) {
            status = e.target.value === "All Status" ? "" : e.target.value;
            loadLists(1);
        }
        
        function handleCategoryChange(e) {
            category = e.target.value === "All Categories" ? "" : e.target.value;
            loadLists(1);
        }
        function handePriorityChange(e) {
            priority = e.target.value === "All Priorities" ? "" : e.target.value;
            loadLists(1);
        }
        
        async function loadLists(page)
        {
            currentPage = page;
            
            const response = await fetch(`/api/user/tickets?page=${currentPage}&limit=${limit}${search.length > 0 ? `&search=${search}` : ``}${status.length > 0 ? `&status=${status}` : ``}${category.length > 0 ? `&category=${category}` : ``}${priority.length > 0 ? `&priority=${priority}` : ``}`, {
                method: "GET",
                headers: { "Content-Type": "application/json" }
            });
            
            if (!response.ok) {
                console.error("Failed to load tickets");
                return;
            }
            
            const result = await response.json();
            const container = document.getElementById("listContainer");
            
            container.innerHTML = "";
            
            result.data.map((item) => container.innerHTML += ticketListItem(item));
                          
            buildPagination(page, result.totalPages);
        }
    
        document.addEventListener("DOMContentLoaded", async () => {
            document.getElementById('search').addEventListener("input", debounce((e) => handleSearch(e.target.value), 700));
            document.getElementById('statusFilter').addEventListener("change", handeStatusChange);
            document.getElementById('categoryFilter').addEventListener("change", handleCategoryChange);
            document.getElementById('priorityFilter').addEventListener("change", handePriorityChange);
            
            await loadLists(currentPage);
        });
    </script>
}
