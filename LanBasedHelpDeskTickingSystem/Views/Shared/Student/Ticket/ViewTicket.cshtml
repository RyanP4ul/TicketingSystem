@model LanBasedHelpDeskTickingSystem.Entities.Views.UserDetailViewModel
@{
    ViewData["Title"] = "View Ticket Tickets";
    
    const string modelConfirm = "confirm-article-modal";
}

@await Html.PartialAsync("_Navbar")

<div id="@modelConfirm" tabindex="-1" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-lg shadow-sm dark:bg-gray-700">
            <button type="button" class="absolute top-3 end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="@modelConfirm">
                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                </svg>
                <span class="sr-only">Close modal</span>
            </button>
            <div class="p-4 md:p-5 text-center">
                <svg class="mx-auto mb-4 text-gray-400 w-12 h-12 dark:text-gray-200" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
                </svg>
                <h3 class="mb-5 text-lg font-normal text-gray-500 dark:text-gray-400">Are you sure you want to continue</h3>
                <button data-modal-hide="@modelConfirm" type="button" class="confirm-btn text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center">
                    Yes, I'm sure
                </button>
                <button data-modal-hide="@modelConfirm" type="button" class="py-2.5 px-5 ms-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">No, cancel</button>
            </div>
        </div>
    </div>
</div>

<div class="container mx-auto max-w-screen-xl p-6">

    <a asp-action="Index" asp-controller="Ticket" class="flex items-center text-sm font-medium text-blue-600 hover:underline mb-4">
        <svg class="w-4 h-4 mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5H1m0 0l4-4M1 5l4 4"/>
        </svg>
        Back to my tickets
    </a>

    <h1 class="text-3xl font-bold text-gray-900">@Model.Ticket.Title</h1>
    <p class="text-lg text-gray-500 mb-6">Ticket #@Model.Ticket.TicketNumber</p>
    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="lg:col-span-2 flex flex-col gap-6">
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Ticket Details</h2>
                <div>
                    <label class="block mb-2 text-sm font-medium text-gray-900">Description</label>
                    <textarea id="description" rows="4" class="block w-full text-sm text-gray-900 bg-white rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Your message..." required>@Model.Ticket.Description.Trim()</textarea>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                    <div>
                        <label for="category" class="block mb-2 text-sm font-medium text-gray-900">Category</label>
                        <select id="category" class="bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                            @foreach (var category in Model.Categories)
                            {
                                @if (category.Name == Model.Ticket.Category?.Name)
                                {
                                    <option value="@category.Id" selected="">@category.Name</option>
                                }
                                else
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            }
                        </select>
                    </div>
                    
                    <div>
                        <label for="priority" class="block mb-2 text-sm font-medium text-gray-900">Priority</label>
                        <select id="priority" class="bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                            @foreach (var priority in new [] { "Low", "Medium", "High" })
                            {
                                @if (priority == Model.Ticket.Priority)
                                {
                                    <option value="@priority.ToLower()" selected="">@priority</option>
                                }
                                else
                                {
                                    <option value="@priority.ToLower()">@priority</option>
                                }
                            }
                        </select>
                        @* <input type="text" id="priority" value="@Model.Priority" class="bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"> *@
                    </div>
                    <div>
                        <label for="created" class="block mb-2 text-sm font-medium text-gray-900">Created</label>
                        <input type="text" id="created" value="@Model.Ticket.CreatedAt" class="bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" readonly>
                    </div>
                    <div>
                        <label for="last-updated" class="block mb-2 text-sm font-medium text-gray-900">Last Updated</label>
                        <input type="text" id="last-updated" value="@Model.Ticket.UpdatedAt" class="bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" readonly>
                    </div>
                </div>
            </div>
            
            <div class="flex items-center justify-center w-full mx-auto shadow-md">
                <label for="dropzone-file" class="flex flex-col items-center justify-center w-full h-64 border-2 border-blue-300 border-dashed rounded-lg cursor-pointer bg-blue-50 dark:bg-gray-800 dark:border-gray-700 hover:bg-blue-100 dark:hover:bg-gray-700">
                    <div class="flex flex-col items-center justify-center pt-5 pb-6">
                        <svg class="w-10 h-10 mb-4 text-blue-600 dark:text-blue-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2"/>
                        </svg>
                        <p class="mb-2 text-lg font-semibold text-blue-700 dark:text-blue-400">Attach files (screenshots, documents)</p>
                        <p class="mb-2 text-sm text-gray-500 dark:text-gray-400"><span class="font-semibold">Drag and drop files here or click to browse</span></p>
                        <p class="text-xs text-gray-500 dark:text-gray-400">Supported formats: PNG, JPG, PDF, DOC (Max 10MB)</p>
                    </div>
                    <input id="dropzone-file" type="file" class="hidden" />
                </label>
            </div>
            
        </div>

        <div class="lg:col-span-1 flex flex-col gap-6">
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Actions</h2>
                <form class="flex flex-col gap-4">
                    <button type="button" id="update-ticket-button" class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-bold rounded-lg text-sm px-5 py-2.5 text-center">
                        Update Ticket
                    </button>
                    <button data-modal-toggle="@modelConfirm" data-modal-target="@modelConfirm" type="button" id="reject-ticket-button" class="w-full text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-bold rounded-lg text-sm px-5 py-2.5 text-center">
                        Remove Ticket
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        document.addEventListener("DOMContentLoaded", async () => {
            const confirmBtn = document.querySelector(".confirm-btn");
            const updateTicketBtn = document.getElementById("update-ticket-button");
            
            updateTicketBtn.addEventListener("click", async () => {
                const response = await fetch(`/api/user/tickets/@Model.Ticket.Id`, {
                    method: "PUT",
                    headers: { "Content-Type": "application/json" },
                    credentials: "include",
                    body: JSON.stringify({
                        Description: document.getElementById("description").value,
                        CategoryId: document.getElementById("category").value,
                        Priority: document.getElementById("priority").value
                    })
                });
                
                if (response.ok) {
                    setTimeout(() => {
                        window.location.href = "/User/Tickets";
                    }, 500);
                }
            });
 
            confirmBtn.addEventListener("click", async () => {
                const response = await fetch(`/api/user/tickets/@Model.Ticket.Id`, {
                    method: "DELETE",
                    headers: { "Content-Type": "application/json" },
                    credentials: "include"
                });
                
                if (response.ok) {
                    setTimeout(() => {
                        window.location.href = "/User/Tickets";
                    }, 500);
                }
            });
        });
    </script>
}